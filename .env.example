# API / DB
API_PORT=8080
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/transit
REDIS_URL=redis://redis:6379/0
TZ=America/New_York

# CORS
CORS_ORIGINS=http://localhost:4200

# GTFS (Static + Realtime)
GTFS_STATIC_URL=
GTFS_STATIC_SOURCES=
GTFS_RT_VEHICLES_URL=<PUT_GTFS_RT_VEHICLE_POSITIONS_URL_HERE>
GTFS_RT_TRIP_UPDATES_URL=<PUT_GTFS_RT_TRIP_UPDATES_URL_HERE>
GTFS_RT_ALERTS_URL=<PUT_GTFS_RT_ALERTS_URL_HERE>

# Swiftly (optional shortcuts)
# If using Swiftly, prefer setting the explicit GTFS_RT_* URLs above.
# Example for MTA Maryland (verify with your Swiftly docs):
#   GTFS_RT_VEHICLES_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt/vehicle-positions.pb
#   GTFS_RT_TRIP_UPDATES_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt/trip-updates.pb
#   GTFS_RT_ALERTS_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt/alerts.pb
# Provide API key via SWIFTLY_API_KEY, which is sent as X-API-Key.
SWIFTLY_API_KEY=
SWIFTLY_AGENCY_KEY=

# Multi-feed realtime (aggregated). Example:
# FEEDS=localbus,marc
# FEED_localbus_VEHICLES_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt-vehicle-positions.pb
# FEED_localbus_TRIP_UPDATES_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt-trip-updates.pb
# FEED_localbus_ALERTS_URL=https://api.goswift.ly/real-time/mta-maryland/gtfs-rt-alerts/v2.pb
# FEED_localbus_API_KEY=<SWIFTLY_API_KEY or leave blank to use global>
#
# FEED_marc_VEHICLES_URL=https://mdotmta-gtfs-rt.s3.amazonaws.com/MARC+RT/marc-vp.pb
# FEED_marc_TRIP_UPDATES_URL=https://mdotmta-gtfs-rt.s3.amazonaws.com/MARC+RT/marc-tu.pb
# FEED_marc_ALERTS_URL=

# Poll intervals (global defaults)
VEHICLES_POLL_SECONDS=6
TRIP_UPDATES_POLL_SECONDS=60
ALERTS_POLL_SECONDS=60

# Mapbox (frontend)
MAPBOX_ACCESS_TOKEN=<PUT_MAPBOX_TOKEN_OR_USE_OSM_LEAFLET_INSTEAD>
